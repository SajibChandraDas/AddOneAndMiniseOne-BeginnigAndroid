<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#ffff45">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:text="Calculator"
        android:textSize="30dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/etDisplay"
        android:textSize="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="5dp">

        <Button
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="9"
            android:id="@+id/bNine"
            android:onClick="buttonNine"
            android:textSize="35dp"/>
        <Button
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="8"
            android:id="@+id/bEight"
            android:onClick="buttonEight"
            android:textSize="35dp"/>
        <Button
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="7"
            android:id="@+id/bSeven"
            android:onClick="buttonSeven"
            android:textSize="35dp"/>
        <Button
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="/"
            android:id="@+id/bDiv"
            android:onClick="buttonDiv"
            android:textSize="35dp"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="5dp">

        <Button
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="6"
            android:id="@+id/bSix"
            android:onClick="buttonSix"
            android:textSize="35dp"/>
        <Button
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="5"
            android:id="@+id/bFive"
            android:onClick="buttonFive"
            android:textSize="35dp"/>
        <Button
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="4"
            android:id="@+id/bFour"
            android:onClick="buttonFour"
            android:textSize="35dp"/>
        <Button
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="*"
            android:id="@+id/bMul"
            android:onClick="buttonMul"
            android:textSize="35dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="5dp">

        <Button
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="3"
            android:id="@+id/bThree"
            android:onClick="buttonThree"
            android:textSize="35dp"/>
        <Button
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="2"
            android:id="@+id/bTwo"
            android:onClick="buttonTwo"
            android:textSize="35dp"/>
        <Button
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="1"
            android:id="@+id/bOne"
            android:onClick="buttonOne"
            android:textSize="35dp"/>
        <Button
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="-"
            android:id="@+id/bSub"
            android:onClick="buttonSub"
            android:textSize="35dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="5dp">

        <Button
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="C"
            android:id="@+id/bCancel"
            android:onClick="buttonCancel"
            android:textSize="35dp"/>
        <Button
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="0"
            android:id="@+id/bZero"
            android:onClick="buttonZero"
            android:textSize="35dp"/>
        <Button
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="="
            android:id="@+id/bEqual"
            android:onClick="buttonEqual"
            android:textSize="35dp"/>
        <Button
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="+"
            android:id="@+id/bPlus"
            android:onClick="buttonPlus"
            android:textSize="35dp"/>

    </LinearLayout>

</LinearLayout>
